{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist/esm"
  },
  "include": ["./lib/**/*.ts", "./types/**/*.d.ts"]
}
