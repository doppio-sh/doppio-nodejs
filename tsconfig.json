  "compilerOptions": {
    "allowJs": true,
    "target": "ES2015",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist/esm"
  },
  "include": ["./lib/**/*.ts"]
}
