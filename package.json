{
  "name": "doppio-nodejs",
  "version": "0.7.0",
  "description": "The doppio.sh official library - HTML to PDF - HTML to Screenshot - Templates",
  "homepage": "https://doppio.sh",
  "bugs": {
    "url": "https://github.com/doppio-sh/doppio-nodejs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/doppio-sh/doppio-nodejs.git"
  },
  "keywords": [
    "doppio",
    "html to pdf",
    "html to screenshot",
    "pdf",
    "templates",
    "screenshot",
    "puppeteer",
    "headless"
  ],
  "engines": {
    "node": ">=17.5"
  },
  "main": "./dist/cjs/doppio.js",
  "module": "./dist/esm/doppio.mjs",
  "types": "./dist/types/doppio.d.ts",
  "exports": {
    ".": {
      "require": {
        "default": "./dist/cjs/doppio.js",
        "types": "./dist/types/doppio.d.ts"
      },
      "import": {
        "default": "./dist/esm/doppio.mjs",
        "types": "./dist/types/doppio.d.ts"
      }
    }
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "jest --setupFiles dotenv/config",
    "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && tsc -p tsconfig-types.json",
    "prepublishOnly": "npm run clean && npm run tsc && npm run rename:esm",
    "rename:cjs": "find ./dist/cjs -type f -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.cjs\"' _ {} \\;",
    "rename:esm": "find ./dist/esm -type f -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.mjs\"' _ {} \\;",
    "prettier": "prettier --write ."
  },
  "author": "Renaud Lataguerra",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}
