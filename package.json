{
  "name": "doppio-nodejs",
  "version": "0.4.0",
  "description": "The doppio.sh official library - HTML to PDF - HTML to Screenshot - Templates",
  "engines": {
    "node": ">=17.5"
  },
  "type": "module",
  "main": "./dist/cjs/doppio.js",
  "module": "./dist/esm/doppio.js",
  "types": "./dist/types/doppio.d.ts",
  "exports": {
    "require": "./dist/cjs/doppio.js",
    "import": "./dist/esm/doppio.js"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "jest --setupFiles dotenv/config",
    "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && tsc -p tsconfig-types.json",
    "prepublishOnly": "npm run clean && npm run tsc",
    "prettier": "prettier --write ."
  },
  "author": "Renaud Lataguerra",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}
